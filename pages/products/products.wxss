/* pages/stories/stories.wxss */ 

.grid-container {
  grid-template-columns: auto;
}

.banner {
  background-image: url(https://images.unsplash.com/photo-1552853662-8f707e1cb336?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=873&q=80);
  opacity: 0.7;
  height: 100vh;
  position: relative;
}



.banner .h1 {
  color: #F1E9E5;
  font-style: bold;
  font-size: 36px;
  top: 5%;
  position: relative;
  text-align: center;
}

.card-product {
  overflow: hidden;
  height: 120px;
  background-color: #F1E9E5;
  box-shadow: 0 3px 3px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  margin: 8px;
  border-radius: 16px;
}

.card-product .h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card-product p {
  font-size: 12px;
  line-height: 1.4;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 16px;
}

.card-user {
  height: 100%;
  width: 120px;
  object-fit: cover;
}
